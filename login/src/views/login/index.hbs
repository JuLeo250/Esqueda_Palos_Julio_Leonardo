<!--Se le pone estilo al Cuadro de login-->
<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg
 shadow-lg text-gray-800">
 <!--CEntra el titulo-->
    <h1 class="text-3x1 font-bold text-center">Login</h1>
    <hr>
    
    <form action="" method="post" class="mt-4"> 
        <!--Se le pone estilo al recuadro de correo-->
		<label for="name">Correo Electronico:</label >
        <input type="email" name="email" placeholder="Email" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>
        <!--Se le pone estilo al recuadro de contraseÃ±a-->
		<p><label for="username">Password:</label>
        <input type="password" name="password" placeholder="password" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>
<!--Se le pone estilo al Boton-->
        <button type="submit" class="rounded-md bg-blue-400 w-full text-lg text-white 
        font-semibold p-2 my-3 hover:bg-blue-600 focus:bg-red-700">Send</button>
<!--Se le pone estilo al texto de Error-->
        {{#if error}}
            <p class="text-Red-500 font-bold text-lg my-3 ">{{error}}</p>
        {{/if}}

    </form>
 
 
 </div>