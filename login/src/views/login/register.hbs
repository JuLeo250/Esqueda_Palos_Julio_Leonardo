<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg
 shadow-lg text-gray-800">
 
    <h1 class="text-3x1 font-bold text-center">Register</h1>
<hr>
    <form action="" method="post" class="mt-4">
        <p><label for="name">Apellido Paterno:</label></p>
        <input type="text" name="apPaterno" placeholder="Apellido Paterno"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>

        <p><label for="name">Apellido Materno:</label></p>
        <input type="text" name="apMaterno" placeholder="Apellido Materno"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>

        <p><label for="name">Nombre:</label></p>
        <input type="text" name="name" placeholder="Name"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>

        
        <p><label for="name">Fecha de Nacimiento:</label></p>
        <input type="date" name="fechaNacimiento"
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>

        <p><label for="name">Telefono</label></p>
        <input type="tel" name="telefono" placeholder="pon tu telefono" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>


        <p><label for="name">Coreo Electronico:</label></p>
        <input type="email" name="email" placeholder="Email" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>

        <p><label for="name">Contrase√±a:</label></p>
        <input type="password" name="password" placeholder="password" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
        bg-gray-300 focus:bg-white" required>


        <button type="submit" class="rounded-md bg-blue-400 w-full text-lg text-white 
        font-semibold p-2 my-3 hover:bg-blue-600 focus:bg-red-600">Send</button>

        {{#if error}}
            <p class="text-red-500 font-bold text-lg my-3 ">{{error}}</p>
        {{/if}}

    </form>
 
 
 </div>


